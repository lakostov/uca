<div class="under-nav">
<h1>Crafts</h1>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abv</th>
      <th>Ibu</th>
      <th>Ounces</th>
      <th>Brewery</th>
      <th>Style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.abv %></td>
        <td><%= beer.ibu %></td>
        <td><%= beer.ounces %></td>
        <td><%= beer.brewery_id %></td>
        <td><%= beer.style_id %></td>
        <td><%= link_to 'Show', beer %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

