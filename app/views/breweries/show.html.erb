<div class="under-nav">
<h2><%= @brewery.name %></h2>
</div>
<div class="row">
  <h2>State: <%= link_to State.find(@brewery.state_id).name, "/states/#{@brewery.state_id}" %></h2>
  <h3>City: <%= @brewery.city %></h3>
<div class="col-lg-4 col-xl-4 col-md-4"></div>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-xl-4">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
    </tr>
  </thead>
  <tbody>
  	 <% @beers =  @brewery.beers.order(:name).paginate(:page => params[:page], :per_page => 10) %>
     <% @beers.each do |b| %>
    <tr>
    <td><%= link_to b.name, "/beers/#{b.id}" %></td><% if b.style_id %><td><%= link_to b.style.name, "/styles/#{b.style.id}" %></td><% else %><td></td><% end %>
    </tr>
    <% end %>
</tbody>
</table>
</div>
<div class="col-lg-4 col-xl-4 col-md-4"></div>
<%- #link_to 'Edit', edit_brewery_path(@brewery) %> 
<%- #link_to 'Back', breweries_path %>
</div>
<div class="row">
<%= will_paginate @beers %>
</div>
